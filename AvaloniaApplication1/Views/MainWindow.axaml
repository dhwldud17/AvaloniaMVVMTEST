<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:AvaloniaApplication1.ViewModels"
        x:Class="AvaloniaApplication1.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="Camera Viewer"
		Width="800"
		Height="600"
		Background="#f2f2f2">

	<!--xmlns : xml namespace : 선언 시 소문자 첫글자를 사용. 의미 불명확 or 선언된 namespace와 중복되면 Camel case-->
	<Design.DataContext>
		<vm:MainWindowViewModel/>
	</Design.DataContext>

	<DockPanel LastChildFill="True">

		<!-- 상단 버튼 바 -->
		<StackPanel Orientation="Horizontal"
					Background="Gray"
					DockPanel.Dock="Top"
					HorizontalAlignment="Left"
					Margin="10"
					Spacing="30">


			<Button Content="Open Camera"
			        Command="{Binding OpenCameraCommand}"
		           	Width="100" />

			
			<Button Content="{Binding ToggleButtonText}"
			        Command="{Binding ToggleStreamCommand}"
		           	Width="100" />

			<Button Content="Save Image"
					Command="{Binding SaveImageCommand}"
					Width="100" />

			<Button Content="Load Image"
					Command="{Binding LoadImageCommand}"
					Width="100" />

			<Button Content="Stop"
					Command="{Binding StopCameraCommand}"
					Width="100" />

			<!-- Gain 조절 슬라이더 -->
			<TextBlock Text="Gain:"
					   VerticalAlignment="Center"
					   Foreground="White" />

			<Slider Minimum="0"
					Maximum="100"
					Value="{Binding GainValue, Mode=TwoWay}"
					Width="150" />

			<TextBlock Text="{Binding GainValue}"
					   VerticalAlignment="Center"
					   Foreground="White" />
		</StackPanel>

		<!-- 카메라 + 저장 이미지 섹션 -->
		<Grid Margin="10">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="3*"/>
				<ColumnDefinition Width="*"/>
			</Grid.ColumnDefinitions>

			<!-- 카메라 영상 -->
			<Border Grid.Column="0"
					Margin="5"
					Background="White"
					CornerRadius="8"
					BorderBrush="#ccc"
					BorderThickness="1">
				<Image Source="{Binding CameraImage}"
					   Stretch="Uniform" />
			</Border>

			<!-- 저장된 이미지 리스트 -->
			<ScrollViewer Grid.Column="1"
						  VerticalScrollBarVisibility="Auto"
						  Margin="5">
				<ItemsControl ItemsSource="{Binding SavedImages}">
					<ItemsControl.ItemsPanel>
						<ItemsPanelTemplate>
							<StackPanel Orientation="Vertical"/>
						</ItemsPanelTemplate>
					</ItemsControl.ItemsPanel>
					<ItemsControl.ItemTemplate>
						<DataTemplate>
							<Border Margin="5"
									CornerRadius="4"
									BorderBrush="#aaa"
									BorderThickness="1">
								<Image Source="{Binding}"
									   Width="120"
									   Height="90"
									   Stretch="UniformToFill"/>
							</Border>
						</DataTemplate>
					</ItemsControl.ItemTemplate>
				</ItemsControl>
			</ScrollViewer>
		</Grid>
	</DockPanel>
</Window>
